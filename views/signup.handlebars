<html lang="en">

  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Sign Up</title>
    <link rel="stylesheet" type="text/css" href="../public/css/style.css" />
  </head>

  <body>
    <h1>Sign Up</h1>
    <form class="signup-form" action="/users/signup" method="POST">
      <input
        type="text"
        name="name"
        id="username-signup"
        placeholder="Name"
        required
      />
      <input
        type="email"
        name="email"
        id="email-signup"
        placeholder="Email"
        required
      />
      <input
        type="password"
        name="password"
        id="password-signup"
        placeholder="Password"
        required
      />
      <button type="submit">Sign Up</button>
    </form>
  </body>

</html>